<style is:global>
  @font-face {
    font-family: SuisseIntl;
    src: url('/font.woff2') format('woff2');
  }

  * {
    box-sizing: border-box;
  }

  html {
    --green: #01953F;
    --light-green: #00bf4f;
    --dark-green: hsl(145, 99%, 15%);

    background: #ddd;
    color: #030303;
    font-size: 16px;
    font-family: SuisseIntl, Seravek, 'Gill Sans Nova', Ubuntu, Calibri, 'DejaVu Sans', source-sans-pro, sans-serif;
  }

  ::selection {
    color: black;
    background: var(--light-green);
  }

  html, body {
    margin: 0;
    padding: 0;
  }

  body {
    margin: 0;
    position: relative;
  }

  @media screen and (min-width: 1024px) {
    body {
      grid-template-columns: 1fr 1fr;
      display: grid;
      overflow: hidden;
      height: 100vh;
    }
  }

  main, aside {
    padding: 1rem;
  }

  @media screen and (min-width: 1024px) {
    main, aside {
      padding: 1rem 3rem;
    }

    main > * {
      width: 100%;
      max-width: 600px;
    }
  }

  main {
    color: white;
    background: var(--green);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
  }

  aside {
    overflow-y: scroll;
  }

  h1, h2 {
    text-transform: uppercase;
    font-weight: normal;
    letter-spacing: 0.025em;
  }

  a, a:visited {
    color: var(--green);
  }
</style>
