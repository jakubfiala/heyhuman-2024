---
import Floorplan from '../components/floorplan.astro'
import Head from '../components/head.astro'
import List from '../components/list.astro'
import Header from '../components/header.astro'
import Footer from '../components/footer.astro'
import ExhibitionInfo from '../components/exhibition-info.astro'

import Pixels from '../assets/img/pixels.png';
---

<html lang="en">
	<Head />
	<body>
		<main>
			<img class="pixels" src={Pixels.src} alt="Pixels background" aria-hidden="true">
			<Header />
			<Floorplan />
			<ExhibitionInfo />
			<Footer />
		</main>
		<aside>
			<List />
		</aside>
	</body>
</html>

<style>
	.pixels {
		display: block;
		position: absolute;
		top: 50%;
		left: 50%;
		translate: -50% -50%;
		object-fit: contain;
		object-position: center center;
		mix-blend-mode: multiply;
		width: auto;
		max-width: 80%;
		pointer-events: none;
	}
</style>
